{
  "name": "nebula-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "next build && tsc --project tsconfig.server.json",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "lint": "next lint",
    "pm2:start": "pm2 start 'npm start'",
    "pm2:stop": "pm2 stop 'all'",
    "pm2:delete": "pm2 delete 'all'",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@emotion/cache": "^11.9.3",
    "@emotion/react": "^11.9.3",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.9.3",
    "@koa/router": "^11.0.1",
    "@mui/icons-material": "^5.8.4",
    "@mui/material": "^5.8.7",
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "koa": "^2.13.4",
    "log4js": "^6.5.1",
    "mobx": "^6.3.9",
    "mobx-react-lite": "^3.2.2",
    "next": "^12.1.4",
    "querystring": "^0.2.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^12.2.2",
    "@types/koa__router": "^8.0.11",
    "@types/react": "^17.0.24",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.2",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "pm2": "^5.1.2",
    "prettier": "^2.7.1",
    "sass": "^1.42.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^26.0.0",
    "ts-node": "^10.8.2",
    "typescript": "^4.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./{pages,src,server,lib,utils}/**/*.{js,jsx,ts,tsx,json}": [
      "npx prettier --write",
      "eslint './{pages,src,server,lib,utils}/**/*.{js,jsx,ts,tsx,json}' --fix"
    ],
    "./{pages,src,utils}/**/*.{scss,sass,css}": [
      "npx prettier --write",
      "stylelint './{pages,src,utils}/**/*.{scss,sass,css}' --fix"
    ]
  }
}
