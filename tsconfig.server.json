{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "lib": [
      "es2019"
    ],
    "target": "es2019",
    "isolatedModules": false,
    "noEmit": false
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
  },
  "include": [
    "server/**/*.ts"
  ],
  "exclude": [
    ".next"
  ]
}